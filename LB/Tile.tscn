	vec4 base = texture(TEXTURE, UV).rgba;
	
	vec4 transition = texture(transition_texture, UV).rgba;
	float alpha_mask = texture(mask, UV).a;
	if (alpha_mask == 0.0) {
		transition.a = 0.0;
	}
		
	COLOR = vec4((transition.rgb * transition.a) + (base.rgb * (1.0 - transition.a)), base.a);
}"
